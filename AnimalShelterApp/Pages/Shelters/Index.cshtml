@page
@model AnimalShelterApp.Pages.Shelters.IndexModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Shelter Create Page</h2>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">Home</a>
            </li>
            <li>
                <a>Shelters</a>
            </li>
            <li class="active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="ibox-content m-b-sm border-bottom">
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label class="control-label" for="product_name">Product Name</label>
                <input type="text" id="product_name" name="product_name" value="" placeholder="Product Name" class="form-control">
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                <label class="control-label" for="price">Price</label>
                <input type="text" id="price" name="price" value="" placeholder="Price" class="form-control">
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                <label class="control-label" for="quantity">Quantity</label>
                <input type="text" id="quantity" name="quantity" value="" placeholder="Quantity" class="form-control">
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="control-label" for="status">Status</label>
                <select name="status" id="status" class="form-control">
                    <option value="1" selected>Enabled</option>
                    <option value="0">Disabled</option>
                </select>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                @Html.AntiForgeryToken()
                <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                    <thead>
                        <tr>
                            <th data-toggle="true">ID</th>
                            <th data-toggle="true">Shelter Name</th>
                            <th data-hide="phone">Description</th>
                            <th data-hide="all">Image</th>
                            <th data-toggle="true">Create Date</th>
                            <th data-toggle="true">Status</th>
                            <th class="text-right" data-sort-ignore="true">Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model._shelters)
                        {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                <img src="@item.ImageUrl" />
                            </td>
                            <td>
                                @item.CreateDate
                            </td>
                            <td>
                                @if (item.Deleted != true)
                                {
                                    <span class="label label-primary">Enable</span>
                                }
                                else
                                {
                                    <span class="label label-danger">Disabled</span>
                                }
                            </td>

                            <td class="text-right">
                                <div class="btn-group">
                                    <a href="/Shelters/Detail/@item.Id" class="btn-white btn btn-xs btn-primary">Detail</a>
                                    <a href="/Shelters/Edit/@item.Id" class="btn-white btn btn-xs btn-warning">Edit</a>
                                    <button data-id="@item.Id" class="btn-white btn btn-xs btn-danger deleteShelter">Delete</button>
                                </div>
                            </td>
                        </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="6">
                                <ul class="pagination pull-right"></ul>
                            </td>
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>
</div>



@section Styles{
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="font-awesome/css/font-awesome.css" rel="stylesheet">

    <!-- FooTable -->
    <link href="css/plugins/footable/footable.core.css" rel="stylesheet">

    <link href="css/animate.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
}

@section Scripts{

    <!-- Custom and plugin javascript -->
    <script src="~/Admin/js/inspinia.js"></script>
    <script src="~/Admin/js/plugins/pace/pace.min.js"></script>

    <!-- Mainly scripts -->
  
    <!-- Custom and plugin javascript -->
    <script src="js/inspinia.js"></script>
    <script src="js/plugins/pace/pace.min.js"></script>

    <!-- FooTable -->
    <script src="js/plugins/footable/footable.all.min.js"></script>

    <!-- Page-Level Scripts -->
    <script>
        $(document).ready(function () {

            $('.footable').footable();

        });

    </script>
    <script>
        $(document).ready(function () {
            var token = $("[name=__RequestVerificationToken]").val();
            
            $('.deleteShelter').on('click', function () {
                var id = $(this).attr("data-id");
                console.log(id);
                
                $.ajax({
                    method: 'POST',
                    url: window.location.href,
                    data: {
                        __RequestVerificationToken: token,
                        id: id
                    },
                    success: function () {
                        $(this).hide();
                        location.reload();
                    },
                    error: function () {
                        alert("İşlem başarısız");
                    }
                })
            })
        })

    </script>



}